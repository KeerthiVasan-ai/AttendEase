<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/drawerLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/menuStartPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_baseline_add_24"
        android:layout_marginBottom="16dp"
        app:icon="@drawable/ic_baseline_manage_search_24"
        android:backgroundTint="@color/myColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/myColor"
        android:src="@drawable/ic_baseline_person_add_alt_1_24"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@id/menuStartPlus"
        app:layout_constraintEnd_toEndOf="@id/menuStartPlus"/>

    <TextView
        android:id="@+id/addClassText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Add Class"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppinsbold"
        app:layout_constraintBottom_toBottomOf="@id/addClass"
        app:layout_constraintEnd_toStartOf="@id/addClass"
        app:layout_constraintTop_toTopOf="@id/addClass"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/quickAttendance1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/myColor"
        android:src="@drawable/ic_baseline_manage_search_24"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@id/addClass"
        app:layout_constraintEnd_toEndOf="@id/addClass"/>

    <TextView
        android:id="@+id/quickAttendanceText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Quick Attendance"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppinsbold"
        app:layout_constraintBottom_toBottomOf="@id/quickAttendance1"
        app:layout_constraintEnd_toStartOf="@id/quickAttendance1"
        app:layout_constraintTop_toTopOf="@id/quickAttendance1"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/generateReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/myColor"
        android:src="@drawable/ic_baseline_download_24"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@id/quickAttendance1"
        app:layout_constraintEnd_toEndOf="@id/quickAttendance1"/>

    <TextView
        android:id="@+id/generateReportText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Generate Report"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppinsbold"
        app:layout_constraintBottom_toBottomOf="@id/generateReport"
        app:layout_constraintEnd_toStartOf="@id/generateReport"
        app:layout_constraintTop_toTopOf="@id/generateReport"/>

</androidx.constraintlayout.widget.ConstraintLayout>


