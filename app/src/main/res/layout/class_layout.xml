<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="12dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/outDegreeName"
            android:layout_width="wrap_content"
            android:fontFamily="@font/ebgaramondbold"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:text="Degree Here"
            android:textColor="@color/black"
            android:gravity="top"/>

        <TextView
            android:id="@+id/outClassName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ebgaramondbold"
            android:textSize="16dp"
            android:text="Class Here"
            android:textColor="@color/black"
            android:layout_below="@id/outDegreeName"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/outYearName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ebgaramondbold"
            android:textSize="16dp"
            android:layout_marginTop="4dp"
            android:layout_below="@id/outClassName"
            android:text="Semester Here"
            android:textColor="@color/black" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>